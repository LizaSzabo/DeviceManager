<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeviceManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_orange</item>
        <item name="colorPrimaryVariant">@color/main_variant_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_orange</item>
        <item name="colorSecondaryVariant">@color/dark_variant_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CalendarWidgetHeader" >
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_orange_text</item>
    </style>
    <style name="CalendarWidgetWeekDay" >
        <item name="android:paddingVertical" tools:targetApi="o">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_orange_grey_text</item>
    </style>
    <style name="CalendarWidgetDate" >
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>